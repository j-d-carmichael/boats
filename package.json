{
  "name": "boats",
  "version": "1.18.4",
  "description": "Beautiful Open / Async Template System - Write less yaml with BOATS and Nunjucks.",
  "keywords": [
    "asyncapi",
    "openapi",
    "openapi2",
    "openapi3",
    "swagger",
    "openapi template",
    "yaml",
    "bundle",
    "nunjucks",
    "yml",
    "DDD",
    "Documentation-Driven Development"
  ],
  "main": "src/index.js",
  "bin": {
    "boats": "./bin/cli.js",
    "bundler": "./bin/cli.js"
  },
  "scripts": {
    "install:githooks": "cp ./githooks/* .git/hooks",
    "clean:test:build": "rm -fR ./test-build/*",
    "build:tocs": "npx doctoc .",
    "build": "rm -fR ./build && ttsc -p . --declaration --declarationDir build",
    "build:watch": "ttsc --watch -p .",
    "lint": "eslint 'src/**/*.{js,ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{js,ts,tsx}' --quiet --fix",
    "test": "npm run lint:fix && npm run clean:test:build && NODE_ENV=test npm run test:builds && npm run test:unit",
    "test:unit": "NODE_ENV=test jest --runInBand",
    "test:unit:single": "NODE_ENV=test jest --collect-coverage false",
    "test:builds": "npm run test:build-cli:asyncapi:std && npm run test:build-cli:oa2:std && npm run test:build-cli:oa2:readonly && npm run test:build-cli:oa2:std:exclude-version && npm run test:build-cli:oa3:std && npm run test:build-cli:oa3:std:exclude-version && npm run test:build-cli:oa2:inject",
    "test:build-cli:asyncapi:std": "node ./bin/cli.js -i ./srcASYNC2/index.yml.njk -o ./test-build/srcASYNC2/srcASYNC2.yml -s srcASYNC2/channels/",
    "test:build-cli:oa2:inject": "node ./bin/cli.js -i ./srcOA2/index.injections.yml.njk -o ./test-build/builtOA2_inject/api.yml -s srcOA2/paths/",
    "test:build-cli:oa2:readonly": "node ./bin/cli.js -i ./srcOA2/index.readonly.yml.njk -o ./test-build/builtOA2_readonly/builtOA2_readonly.yml -s srcOA2/paths/",
    "test:build-cli:oa2:std": "node ./bin/cli.js -i ./srcOA2/index.yml.njk -o ./test-build/builtOA2_std/builtOA2_std.yml -s srcOA2/paths/",
    "test:build-cli:oa2:std:exclude-version": "node ./bin/cli.js -i ./srcOA2/index.yml.njk -o ./test-build/builtOA2_no_version/builtOA2_no_version.yml -x -s srcOA2/paths/",
    "test:build-cli:oa3:std": "node ./bin/cli.js -i ./srcOA3/index.yml.njk -o ./test-build/builtOA3_std/builtOA3.yml -s srcOA3/paths/",
    "test:build-cli:oa3:std:exclude-version": "node ./bin/cli.js -i ./srcOA3/index.yml.njk -o ./test-build/builtOA3_exclude/builtOA3.yml -x -s srcOA3/paths/",
    "prepublishOnly": "npm run build && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johndcarmichael/boats.git"
  },
  "author": "John Carmichael",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/johndcarmichael/boats/issues"
  },
  "homepage": "https://github.com/johndcarmichael/boats#readme",
  "dependencies": {
    "@asyncapi/parser": "^0.18.3",
    "colors": "^1.4.0",
    "commander": "^5.1.0",
    "deepmerge": "^4.2.2",
    "dotenv": "^8.2.0",
    "fs-extra": "^9.0.1",
    "inquirer": "^7.1.0",
    "js-yaml": "^3.14.0",
    "json-schema-ref-parser": "^9.0.1",
    "lodash": "^4.17.15",
    "npm-tool-version-check": "^1.1.2",
    "nunjucks": "^3.2.1",
    "swagger-parser": "^9.0.1",
    "tslib": "^2.0.0",
    "walker": "^1.0.7"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.1",
    "@types/inquirer": "^6.5.0",
    "@types/jest": "^25.2.3",
    "@types/js-yaml": "^3.12.5",
    "@types/lodash": "^4.14.157",
    "@types/node": "^14.0.10",
    "@types/nunjucks": "^3.1.3",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.1.0",
    "@zerollup/ts-transform-paths": "^1.7.17",
    "codecov": "^3.7.0",
    "eslint": "^7.1.0",
    "eslint-plugin-deprecate": "^0.7.0",
    "hasha": "^5.2.0",
    "jest": "^26.0.1",
    "ts-jest": "^26.1.0",
    "ttypescript": "^1.5.10",
    "typescript": "^3.9.3"
  },
  "engines": {
    "node": "12"
  }
}
